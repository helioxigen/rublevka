{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "@utils": ["./utils"],
            "@config": ["./config"],
